# Editor Configuration (http://editorconfig.org)
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{md,rst}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{json,yml}]
indent_size = 2
